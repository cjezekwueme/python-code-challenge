print("Welcome to Python Pizza Deliveries!")
size = input("What size pizza do you want? S, M, or L ")
add_pepperoni = input("Do you want pepperoni? Y or N ")
extra_cheese = input("Do you want extra cheese? Y or N ")
# ðŸš¨ Don't change the code above ðŸ‘†

#Write your code below this line ðŸ‘‡

small_size = 15
medium_size = 20
large_size = 25

if small_size == 'Y':
  if add_pepperoni == 'Y':
    small_size += 2
    if extra_cheese == 'Y':
      print(small_size + 1)
    else:
      print(small_size + 2)
  elif add_pepperoni == 'N':
    if extra_cheese == 'N':
      print(small_size + 1)
    else:
      print(f'Your total bill is ${small_size}')
elif medium_size == 'Y':
  if add_pepperoni == 'Y':
    medium_size += 3
    if extra_cheese == 'Y':
      print(medium_size + 1)
    else:
      print(medium_size + 3)
  elif add_pepperoni == 'N':
    if extra_cheese == 'N':
      print(medium_size + 3)
    else:
      print(f'Your total bill is ${medium_size}')
elif large_size == 'Y':
  if add_pepperoni == 'Y':
    large_size += 3
    if extra_cheese == 'Y':
      print(large_size + 1)
    else:
      print(large_size + 3)
  elif add_pepperoni == 'N':
    if extra_cheese == 'N':
      print(f'Your total bill is ${large_size}')
    else:
      print(large_size  + 1)
